# MultiCloud Function Configuration File
# Generated by MultiCloud CLI

# Optional Configuration settings are commented out by default

# Function metadata
name: {{ function_name }}
description: {{ function_description }}
version: 1.0.0

# Function authors
authors:
  - name: {{ author_name }}
    email: {{ author_email }}

# Methods and Dependencies
handler: {{ handler | default(function_name + '.handler') }}
requirements: {{ requirements_file | default('requirements.txt') }}
#readme: {{ readme_file | default('README.md') }}
#license: {{ license | default('MIT') }}

# Environment Variables
environment:
  LOG_LEVEL: {{ log_level | default('INFO') }}
{% if environment_variables %}
  {% for key, value in environment_variables.items() %}
  {{ key }}: {{ value }}
  {% endfor %}
{% endif %}

platforms:
{% if 'knative' in platforms %}
  - name: knative
    version: 0.36.0
    
{% endif %}
    